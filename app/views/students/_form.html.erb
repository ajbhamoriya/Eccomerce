<%= form_with scope: :student,url:students_path do|form| %>
	<% if @student.errors.any? %>
		<h2>
			<%= pluralize(@student.errors.count, "error") %> prohibited this student being saved:
		</h2>
		<ul> 
			<%= @student.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	<% end %>
	<p>
		<%= form.label :student_name %>
		<%= form.text_field :name %>
	</p>
	<p>
		<%= form.submit %>
	</p>
<% end %>
