<h1> index page :</h1>
<h2> Listing appointments: </h2>
<table>
	<tr>
		<th> appointment dates:</th>
		<th> patient:</th>
		<th> physician:</th>
		<th></th>
		<th></th>
	</tr>
	<% @appointments.each do |appointment| %>
		<tr>
			<td><%= appointment.appointment_date %></td>
			<td><%= appointment.patient.name  %></td>
			<td><%= appointment.physician.name %></td>
            <td>
				<%= link_to "cancel",appointment_path(appointment), method: :delete, data: { confirm:"Are you sure to cancel??" } %>
			</td>
       
			<td><%= link_to "edit_appointment", edit_appointment_path(appointment) %></td>
	
		</tr>
	<% end %>
</table>